{
  "name": "@btc-connect/vue",
  "version": "0.3.8",
  "description": "Vue adapter for BTC Connect, providing Vue components and Composables for easy integration.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc -b && vite build && bun run minify",
    "preview": "vite preview",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "vue-tsc -b",
    "minify": "terser dist/index.js -c drop_console=true,drop_debugger=true -m -o dist/index.js",
    "test": "bun test"
  },
  "dependencies": {
    "@btc-connect/core": "^0.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.0",
    "vite-plugin-dts": "^4.2.3",
    "vue-tsc": "^3.0.5"
  },
  "peerDependencies": {
    "vue": ">=3.2.0"
  },
  "keywords": [
    "bitcoin",
    "btc",
    "wallet",
    "web3",
    "connect",
    "vue",
    "composables"
  ],
  "author": "btc-connect",
  "license": "MIT",
  "homepage": "https://github.com/IceHugh/btc-connect#readme",
  "bugs": {
    "url": "https://github.com/IceHugh/btc-connect/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IceHugh/btc-connect.git",
    "directory": "packages/vue"
  }
}
