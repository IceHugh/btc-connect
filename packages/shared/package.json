{
  "name": "@btc-connect/shared",
  "version": "0.1.0",
  "description": "BTC Connect 共享类型和工具函数",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    },
    "./styles": {
      "import": "./dist/styles.js",
      "types": "./dist/styles.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun run build:types && bun run build:js",
    "build:js": "bun build src/index.ts --outdir=dist --target=node --format=esm --splitting",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "test": "bun test",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@btc-connect/core": "workspace:*"
  },
  "devDependencies": {
    "@btc-connect/core": "workspace:*",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "bitcoin",
    "wallet",
    "btc-connect",
    "shared",
    "types",
    "utils"
  ],
  "author": "BTC Connect Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/btc-connect.git",
    "directory": "packages/shared"
  },
  "homepage": "https://github.com/your-org/btc-connect/tree/main/packages/shared#readme"
}