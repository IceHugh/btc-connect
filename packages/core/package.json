{
  "name": "@btc-connect/core",
  "version": "0.1.0",
  "description": "BTC Connect 核心模块 - 框架无关的钱包适配器层",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc --declaration --emitDeclarationOnly --outDir dist/types && bun build src/index.ts --outdir=dist --format=esm --target=node --splitting",
    "dev": "bun run build --watch",
    "test": "bun test --config tsconfig.test.json",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "bitcoin",
    "btc",
    "wallet",
    "web3",
    "connect",
    "unisat",
    "okx",
    "xverse"
  ],
  "author": "btc-connect",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/btc-connect.git",
    "directory": "packages/core"
  }
}
