{
  "name": "@btc-connect/core",
  "version": "0.2.0",
  "description": "The framework-agnostic core module for BTC Connect, providing a wallet adapter layer.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && bun run build.js",
    "dev": "bun run build --watch",
    "test": "bun test",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-plugin-dts": "^0.3.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "bitcoin",
    "btc",
    "wallet",
    "web3",
    "connect",
    "unisat",
    "okx",
    "xverse"
  ],
  "author": "btc-connect",
  "license": "MIT",
  "homepage": "https://github.com/IceHugh/btc-connect#readme",
  "bugs": {
    "url": "https://github.com/IceHugh/btc-connect/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IceHugh/btc-connect.git",
    "directory": "packages/core"
  }
}
