{
  "name": "btc-connect",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "bun run --filter @btc-connect/core build && bun run --filter @btc-connect/react build && bun run --filter @btc-connect/vue build",
    "dev": "bun run --filter @btc-connect/* dev",
    "test": "bun test",
    "lint": "bun run --filter @btc-connect/* lint",
    "format": "bun run --filter @btc-connect/* format",
    "typecheck": "bun run --filter @btc-connect/* typecheck",
    "install:all": "bun install && bun run build"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@biomejs/biome": "^2.1.3"
  }
}