{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@btc-connect/core": ["./packages/core/src"],
      "@btc-connect/react": ["./packages/react/src"],
      "@btc-connect/vue": ["./packages/vue/src"]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/*/dist",
    "packages/*/node_modules",
    "examples"
  ]
}